chat
.dropdown.pull-right
  span.fa.fa-bars.fa-3x.dropdown-toggle(data-toggle='dropdown')
  ul.dropdown-menu.dropdown-menu-right(role='menu')
    li(role='presentation')
      a(role='menuitem') Login
#account-wrap.container
  .row
    span.h1 {{username}}
    .pull-right
      button#newSlideshow.btn.btn-danger(data-toggle='modal', data-target='#newSlideshowModal') New Slideshow
  .row
    a#editToken(data-toggle='modal', data-target='#editTokenModal') Edit Token
  .row
    table.table
      thead
        tr
          th Slideshow
          th Created Date
          th Author
          th Action
          th Token
      tbody
        tr(ng-repeat='slide in slideShows')
          td {{slide.slideName}}
          td {{slide.date}}
          td {{slide.author}}
          td
            a(href='/account#/{{slide.slideName}}') Play
            a(href='/account#/{{slide.slideName}}/editor') Edit
            a(ng-click='deleteSlide(slide.slideName)') Delete
          td
            select
              option(ng-repeat='token in tokens track by $index') {{token.accessToken}}

//TODO: #newSlideshow modal
#newSlideshowModal.modal(role='dialog')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(data-dismiss='modal')
        h3 New SlideShow
      .modal-body
        form.form-inline.form-group(novalidate, name='newSlideForm')
          input.form-control(type='text', placeholder='SlideShow Name', ng-model='newSlideName', ng-change='checkSlideShowName(newSlideName)', required)
      .modal-footer
        a.btn.btn-primary(ng-disabled='newSlideForm.$invalid || checkSlideShowName(newSlideName)', ng-href='/account#/{{newSlideName}}/editor') Create
        button.btn.btn-default(data-dismiss='modal') Close

//TODO: #editToken modal
#editTokenModal.modal(role='dialog')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(data-dismiss='modal')
        h3 Token Settings
      .modal-body
        a.btn.btn-warning.btn-sm.pull-right(href='/oauth2/auth') Add Token
        .row
          table.table
            thead
              tr
                th Access Token
            tbody
              tr(ng-repeat='token in tokens track by $index')
                td {{token.accessToken}}
      .modal-footer
        button.btn.btn-default(data-dismiss='modal') Close
