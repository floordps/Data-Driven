script(src='/app/js/bootstrap-markdown.buttons.js')

.container
  .row
    form
      textarea#text-editor(name='content', rows='20')
#graphModal.modal.fade(role='dialog')
  .modal-content
    .modal-header
      button.close(type='button', data-dismiss='modal', aria-label='close')
      h3 Graph
    .modal-body
      form here
    .modal-footer
      button.btn.btn-primary(type='button') Create Graph
#tableModal.modal.fade(role='dialog')
  .modal-content
    .modal-header
      button.close(type='button', data-dismiss='modal', aria-label='close')
      h4 Table
    .modal-body
      form.form-horizontal(name='tableForm', novalidate)
        .row
          .form-group.col-xs-6.col-sm-6.col-md-6.col-lg-6
            input#rows.form-control.col-xs-offset-6.col-sm-offset-6.col-md-offset-6.col-lg-offset-6(type='number', name='rows', placeholder='# of rows', min=1, ng-model='rows', required)
        .row
          .form-group.col-xs-6.col-sm-6.col-md-6.col-lg-6
            input#columns.form-control.col-xs-offset-6.col-sm-offset-6.col-md-offset-6.col-lg-offset-6(type='number', name='columns', placeholder='# of columns', min=1, max=10, ng-model='columns', required)
        .row
          .checkbox.col-xs-offset-3.col-sm-offset-3.col-md-offset-3.col-lg-offset-3
            label
              input#headers(type='checkbox')
              | Headers
    .modal-footer
      button#createTable.btn.btn-primary(type='button', ng-disabled='!tableForm.$valid') Create Table
      button.btn.btn-default(type='button', data-dismiss='modal') Close
